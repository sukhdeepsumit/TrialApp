<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/studentformbg"
    android:backgroundTint="#15FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".TeacherDatabase.StudentAddForm">


    <TextView
        android:id="@+id/studentAddHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Details"
        android:textSize="30sp"
        android:textColor="#fff"
        android:fontFamily="@font/bungee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />
    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:hint="First Name: "
        android:textColor="#fff"
        android:layout_below="@+id/studentAddHeading"

        android:layout_marginTop="22dp"
        />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:hint="Last Name: "
        android:textColor="#fff"

        android:layout_below="@+id/firstName"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:id="@+id/teacherEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#fff"
        android:hint="Email: "
        android:textColor="#fff"
        android:layout_below="@+id/lastName"
        android:layout_marginTop="8dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/mobileNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColorHint="#fff"
        android:hint="Contact: "
        android:textColor="#fff"
        android:layout_below="@+id/teacherEmailId"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="Subject: "
        android:layout_below="@+id/mobileNum"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:id="@+id/feePaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="Fee Status : "
        android:layout_below="@+id/subject"
        android:layout_marginTop="8dp"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feePaid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_button"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18dp" />


</RelativeLayout>